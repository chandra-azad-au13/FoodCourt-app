<div class="auth-block">
    <section class=" flex mx-auto justify-center pt-24">
        <form action="/admin/add" method="POST" enctype="multipart/form-data"
            class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col w-1/3">
            {{#if messages.error}}
            <span class="text-red-500 font-bold text-center">{{messages.error}}</span>
            {{/if}}
            <div class="mb-2">
                <label class="block text-grey-darker text-sm font-bold mb-2" for="name">
                    Name
                </label>
                <input class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" id="name"
                    name="name" type="text" placeholder="Enter dish name">
            </div>
            <div class="mb-2">
                <label class="block text-grey-darker text-sm font-bold mb-2" for="price">
                    Price
                </label>
                <input class="shadow appearance-none border  rounded w-full py-2 px-3 text-grey-darker mb-3" id="price"
                    type="text" name="price" placeholder="Enter dish price">
            </div>
            <div class="flex w-full items-center justify-center bg-grey-lighter mb-6">
                <label
                    class="w-full flex flex-col items-center px-4 py-6 bg-white rounded-lg shadow-lg tracking-wide  border cursor-pointer">
                    <svg class="w-8 h-8" fill="currentColor" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20">
                        <path
                            d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z" />
                    </svg>
                    <span class="mt-2 text-sm font-bold leading-normal">Select Image</span>
                    <input type='file' name="image" class="hidden" />
                </label>
            </div>
            <div>
                <button type="submit" class="main-btn  w-full rounded-full text-white font-bold py-2 px-6">
                    Add
                </button>
            </div>
        </form>
    </section>
</div>


