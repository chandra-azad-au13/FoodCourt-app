<section class="container mx-auto">
    <h1 class="font-bold text-lg mb-4 mt-12 w-1/3 inline-block">All Dishes</h1>
    {{#if messages.seccess}}
    <div id="success-alert" class="inline text-center text-green-500 text-white text-md font-bold ml-12  mb-4">
        <span>{{messages.seccess}}</span>
    </div>
    {{/if}}
    <hr>
    {{#each data}}
    <div class="update-list menu-card  w-2/3 mx-auto">
        <div class="flex items-center my-4 pr-2 h-20">
            <img class="w-32 h-20" src="../../img/{{image}}" alt="">
            <div class="flex-1 mx-12">
                <h1 class="text-lg font-bold">{{name}}</h1>
            </div>
            <span class="flex-1 text-lg font-bold">â‚¹ {{price}}</span>
            <div class="text-lg font-bold">
                <button data-id="{{_id}}" class="updateMenu bg-green-600  p-2 pl-3 shadow-lg rounded"
                    onclick="document.getElementById('myModal').style.display='block'"><i
                        class="fas fa-edit"></i></button>

                <a href="/admin/delete/{{_id}}" class="deleteMenu mx-2 bg-red-600 py-2 px-3 shadow-lg rounded" ><i class="far fa-trash-alt"></i></a>
            </div>
        </div>
    </div>
    {{/each}}
</section>

<div id="myModal" class="modal bg-white">
    <div class="modal-content w-1/4 mx-auto bg-white">
        <button class="font-bold text-lg float-right rounded px-4 bg-red-500 text-white"
            onClick="document.getElementById('myModal').style.display = 'none'">&times</button>
        <hr class="mt-8">

        <form action="/admin/update/dish" method="POST">
            <div>
                <label class="float-left block text-grey-darker text-sm font-bold mb-2" for="id">Id</label>
                <input name="id" id="id" type="text"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" value=''>
            </div>
            <div class="my-4">
                <label class="float-left block text-grey-darker text-sm font-bold mb-2" for="name">Name</label>
                <input type="text" id="name" class="shadow  border rounded w-full py-2 px-3 text-grey-darker"
                    name="name" value=''>
            </div>
            <div class="">
                <label class="float-left  text-grey-darker text-sm font-bold mb-2" for="price">Price</label>
                <input type="text" id="price" name="price"
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" value=''>
            </div>
            <div class="my-4 text-center  mx-auto">
                <button type="submit"
                    class="w-1/2 mx-auto font-bold text-lg text-white rounded-full py-2 main-btn">Submit</button>
            </div>
        </form>
    </div>
</div>


